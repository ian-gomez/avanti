<template>
    <div class="contenedor">
        <div class="dato" v-if="operaciondetalle==1">
            <label>Cantidad:</label>
            <input class="form-control" type="date" v-model="detalleR.cantidad" placeholder="Ingrese la cantidad..." autofocus>
            <br>
            <label>Precio:</label>
            <input class="form-control" v-model="detalleR.precio" placeholder="Ingrese el precio..." autofocus>
            <br>
            <button class="boton" @click="operaciondetalle()">Aceptar</button>
            <button @click="cerrar()" class="boton">X</button>
        </div>

        <div class="dato" v-else-if="operaciondetalle==2">
            <label>Cantidad:</label>
            <input class="form-control" type="date" v-model="detalleR.cantidad" placeholder="Ingrese la cantidad..." autofocus>
            <br>
            <label>Precio:</label>
            <input class="form-control" v-model="detalleR.precio" placeholder="Ingrese el precio..." autofocus>
            <br>
            <button class="boton" @click="operaciondetalle()">Aceptar</button>
            <button @click="cerrar()" class="boton">X</button>
        </div>

        <div class="dato" v-else-if="operaciondetalle==3">
            <div class="datos">
                <button class="boton" @click="operaciondetalle()">Aceptar</button>
                <button @click="cerrar()" class="boton">X</button>
            </div>
        </div>
    </div>

</template>

<script>
    export default {
    	props: ['operaciondetalle',"detalleR"],
        data:function(){
            return{

            }
        },
        mounted() {
            console.log('Component mounted.')

        },

		methods:{

            cerrar:function(){
                this.$emit('cerrar-ventana');
            },    
            alta:function(){
                let formdata = new FormData();
                formdata.append("", this.detalleR.);
                formdata.append("", this.detalleR.);
                formdata.append("", this.detalleR.);
                axios.post('stock-cabecera',formdata).then(response =>{
                this.$emit('alta',response.data);
                })
            },
            baja:function(){
                axios.delete('stock-cabecera/'+this.detalleR.id).then(response => {
                    this.$emit('baja');
                })
            },
            editar:function(){           
                let formdata = new FormData();
                formdata.append("fecha",this.detalleR.fecha);
                formdata.append("_method","PATCH");
                axios.post('stock-cabecera/'+this.detalleR.id,formdata).then(response => {
                this.$emit('editar',response.data);
                })
            },

            operaciondetalle:function(){
                if (this.operacion == 1){
                    this.alta();
                };
                if (this.operacion == 3){
                    this.baja();            
                };
                if (this.operacion == 2){
                    this.editar();
                };
            }
        }        
    }
</script>
<style type="text/css">
    .contenedor{
        display: grid;
        grid-template-columns: 1fr 3fr 1fr;
        grid-template-rows: 1fr 1fr 3fr 1fr 1fr;
        grid-template-areas: 
        " . . ."
        " . dato ."
        " . aceptar ."
        " . . .";
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.5);
    }
    .box{
        width: 28%;
        margin: 20% auto;
    }    
    .boton{
        font-weight: bold;
        font-size: 10px;
        width: 200px;
        border: solid gainsboro 20px;
        background-color: ghostwhite;
    }
    .dato {
        background-color: gainsboro;
        grid-area: dato;
    }
    .vista-eliminar{
        background-color: green;
        grid-area: vista-eliminar;    
    }
    .vista-editar{
        
    }
</style>